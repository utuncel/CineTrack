<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="org.com.controller.user.LoginController"
  spacing="10"
  alignment="CENTER">

  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>

  <Label text="Login" style="-fx-font-size: 24;"/>
  <TextField fx:id="usernameField" promptText="Username" />
  <PasswordField fx:id="passwordField" promptText="Password" />
  <Button fx:id="loginButton" text="Login" onAction="#handleLogin" />

  <HBox alignment="CENTER" spacing="10">
    <Label text="Don't have an account?" />
    <Hyperlink fx:id="registerLink" text="Register here" onAction="#switchToRegister" />
  </HBox>
</VBox>