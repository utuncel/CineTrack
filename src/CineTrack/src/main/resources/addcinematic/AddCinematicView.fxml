<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane
  prefHeight="800.0"
  prefWidth="1200.0"
  xmlns:fx="http://javafx.com/fxml/1"
  xmlns="http://javafx.com/javafx/22"
  fx:controller="org.com.controller.addcinematic.AddCinematicController"
  stylesheets="@AddCinematicStyle.css">

  <center>
    <VBox alignment="CENTER" spacing="20">
      <!-- Title Input Field -->
      <HBox alignment="CENTER" spacing="10">
        <Label text="Title:" />
        <TextField fx:id="titleField" promptText="Enter title" />
      </HBox>

      <!-- Type Dropdown -->
      <HBox alignment="CENTER" spacing="10">
        <Label text="Type:" />
        <ComboBox fx:id="typeComboBox">
          <items>
            <FXCollections fx:factory="observableArrayList">
              <String fx:value="ANIME" />
              <String fx:value="SERIES" />
              <String fx:value="MOVIE" />
            </FXCollections>
          </items>
        </ComboBox>
      </HBox>

      <!-- State Dropdown -->
      <HBox alignment="CENTER" spacing="10">
        <Label text="State:" />
        <ComboBox fx:id="stateComboBox" onAction="#handleStateChange">
          <items>
            <FXCollections fx:factory="observableArrayList">
              <String fx:value="DROPPED" />
              <String fx:value="FINISHED" />
              <String fx:value="TOWATCH" />
              <String fx:value="WATCHING" />
            </FXCollections>
          </items>
        </ComboBox>
      </HBox>

      <!-- Rating Spinner -->
      <HBox alignment="CENTER" spacing="10">
        <Label text="Rating:" />
        <Spinner fx:id="ratingSpinner" editable="true">
          <valueFactory>
            <SpinnerValueFactory.IntegerSpinnerValueFactory
              initialValue="5" max="10" min="1" />
          </valueFactory>
        </Spinner>
      </HBox>

      <!-- Add Button -->
      <Button onAction="#handleAddCinematic" text="Add Cinematic" />
    </VBox>
  </center>

  <left>
    <fx:include source="../SidebarView.fxml" />
  </left>

</BorderPane>