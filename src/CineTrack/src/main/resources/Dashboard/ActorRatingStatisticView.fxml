<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="actorRating" alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.com.controller.dashboard.ActorRatingStatisticController">
    <VBox alignment="CENTER" spacing="10">

        <HBox alignment="CENTER" spacing="5">
            <Label styleClass="label-min-rating" text="Minimal Results: "/>
            <TextField fx:id="minRatingInput" styleClass="input-min-rating"/>
        </HBox>

        <BarChart fx:id="actorRatingBarChart" prefHeight="400" prefWidth="1000" styleClass="bar-chart">
            <xAxis>
                <CategoryAxis label="Actor" fx:id="xAxis"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Rating" tickUnit="1" upperBound="10"/>
            </yAxis>
        </BarChart>

    </VBox>

    <stylesheets>
        <URL value="@GenreRatingStatisticStyle.css"/>
    </stylesheets>

</HBox>
