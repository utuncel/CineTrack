<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20"
  xmlns="http://javafx.com/javafx/22"
  fx:controller="org.com.controller.dashboard.ActorRatingStatisticController"
  fx:id="actorRating">
  <VBox alignment="CENTER" spacing="10">

    <BarChart prefHeight="400" prefWidth="1000" styleClass="bar-chart" fx:id="actorRatingBarChart">
      <xAxis>
        <CategoryAxis label="Actor" fx:id="xAxis"/>
      </xAxis>
      <yAxis>
        <NumberAxis label="Rating" tickUnit="1" upperBound="10"/>
      </yAxis>
    </BarChart>

    <HBox alignment="CENTER" spacing="5">
      <Label styleClass="label-min-rating" text="Minimal Results: "/>
      <TextField styleClass="input-min-rating" fx:id="minRatingInput"/>
    </HBox>

  </VBox>

  <stylesheets>
    <URL value="@GenreRatingStatisticStyle.css"/>
  </stylesheets>

</HBox>
