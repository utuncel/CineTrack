<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20"
  xmlns="http://javafx.com/javafx/22"
  fx:controller="org.com.controller.dashboard.GenreRatingStatisticController"
  fx:id="genreRating" prefWidth="1000.0" prefHeight="450.0"
  styleClass="strategy-container">

  <Label styleClass="statistic-name" text="Genre Ratings:" />

  <VBox alignment="CENTER" spacing="10" prefWidth="1000.0" prefHeight="450.0">

    <BarChart prefHeight="300.0" prefWidth="950.0" styleClass="bar-chart" fx:id="genreRatingBarChart">
      <xAxis>
        <CategoryAxis label="Genre" fx:id="xAxis"/>
      </xAxis>
      <yAxis>
        <NumberAxis label="Rating" tickUnit="1" upperBound="10" fx:id="yAxis"/>
      </yAxis>
    </BarChart>

    <HBox alignment="CENTER" spacing="10">
      <Label styleClass="label-min-rating" text="Minimal Rating:"/>
      <TextField styleClass="input-min-rating" fx:id="minRatingInput" prefWidth="150.0"/>
    </HBox>

  </VBox>

  <stylesheets>
    <URL value="@StatisticStyle.css"/>
  </stylesheets>

</HBox>
