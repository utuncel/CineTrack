<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20"
  xmlns="http://javafx.com/javafx/22"
  fx:controller="org.com.controller.dashboard.GenreCountStatisticController"
  fx:id="genreCount" prefWidth="256.0" prefHeight="373.0"
  styleClass="strategy-container">

  <Label styleClass="statistic-name" text="Genre Count:" />

  <VBox alignment="CENTER" spacing="10" prefWidth="1000.0" prefHeight="450.0">

    <BarChart legendVisible="false" prefHeight="300.0" prefWidth="950.0" styleClass="bar-chart"
      fx:id="genreBarChart">
      <xAxis>
        <CategoryAxis label="Genre" fx:id="xAxis"/>
      </xAxis>
      <yAxis>
        <NumberAxis label="Count" tickUnit="1" upperBound="50"/>
      </yAxis>
    </BarChart>

    <HBox alignment="CENTER" spacing="10">
      <Label styleClass="label-min-rating" text="Minimal Results:"/>
      <TextField styleClass="input-min-rating" fx:id="minGenreCountInput" prefWidth="150.0"/>
    </HBox>

  </VBox>

  <stylesheets>
    <URL value="@StatisticStyle.css"/>
  </stylesheets>

</HBox>
