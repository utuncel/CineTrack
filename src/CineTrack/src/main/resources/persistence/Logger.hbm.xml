<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.com.model.logger">

  <class name="org.com.model.logger.Logger" table="logs">
    <id name="id" column="id">
      <generator class="identity"/>
    </id>

    <property name="timestamp" column="timestamp" type="org.hibernate.type.LocalDateTimeType"/>
    <property name="level" column="level" not-null="true"/>
    <property name="message" column="message" not-null="true"/>

    <many-to-one name="user" class="org.com.model.user.User" column="user_id" fetch="join" not-null="false"/>

  </class>

</hibernate-mapping>