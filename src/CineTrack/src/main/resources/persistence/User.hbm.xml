<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.com.model.user">
  <class name="org.com.model.user.User" table="users">

    <id name="id" column="id" type="long">
      <generator class="identity" />
    </id>

    <property name="name" column="name" type="string" not-null="true" unique="true" />
    <property name="password" column="password" type="string" not-null="true" />

    <bag  name="cinematics" table="cinematics" cascade="all" lazy="true" fetch="select">
      <key column="user_id" />
      <one-to-many class="org.com.model.Cinematic" />
    </bag >

    <bag  name="logs" table="logs" cascade="all" lazy="false" fetch="select">
      <key column="user_id" />
      <one-to-many class="org.com.model.logger.Logger" />
    </bag >
  </class>
</hibernate-mapping>
