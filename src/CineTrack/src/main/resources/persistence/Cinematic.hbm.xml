<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.com.models">

  <class name="org.com.models.Cinematic" table="cinematics">
    <id name="id" column="id">
      <generator class="identity"/>
    </id>

    <property name="title" column="title" not-null="true"/>
    <property name="myRating" column="my_rating"/>
    <property name="description" column="description"/>
    <property name="imageUrl" column="image_url"/>
    <property name="runtime" column="runtime"/>
    <property name="imdbRating" column="imdb_rating"/>
    <property name="imdbVotes" column="imdb_votes"/>
    <property name="directorName" column="director_name"/>

    <property name="state" column="state" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">org.com.models.enums.State</param>
        <param name="useNamed">true</param>
      </type>
    </property>

    <property name="type" column="type" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">org.com.models.enums.Type</param>
        <param name="useNamed">true</param>
      </type>
    </property>

    <many-to-one name="user" class="org.com.models.user.User" column="user_id" not-null="true" fetch="join"/>

    <!-- Actors List -->
    <list name="actors" table="actors" cascade="all-delete-orphan" inverse="true" lazy="false">
      <key column="cinematic_id"/>
      <list-index column="actor_index"/>
      <element column="actor" type="string"/>
    </list>

    <!-- Genres List -->
    <list name="genres" table="genres" cascade="all-delete-orphan" inverse="true" lazy="false">
      <key column="cinematic_id"/>
      <list-index column="genre_index"/>
      <element column="genre" type="string"/>
    </list>

  </class>

</hibernate-mapping>